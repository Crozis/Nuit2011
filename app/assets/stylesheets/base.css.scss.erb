$dark_red : #ac006a;
$light_red: #f90099;
/*------------------------------------------------------------------------------------------ MIXINS --------------------*/

@mixin radius($radius) {
	-webkit-border-radius: $radius;
	-moz-border-radius: $radius;
	border-radius: $radius;
}

@mixin noradius {
	-webkit-border-radius: none;
	-moz-border-radius: none;
	border-radius: none;
}

@mixin radiusRight($radius) {
	-webkit-border-bottom-right-radius: $radius;
	-webkit-border-top-right-radius: $radius;
	-moz-border-radius-bottomright: $radius;
	-moz-border-radius-topright: $radius;
	border-bottom-right-radius: $radius;
	border-top-right-radius: $radius;
}
@mixin radiusLeft($radius) {
	-webkit-border-bottom-left-radius: $radius;
	-webkit-border-top-left-radius: $radius;
	-moz-border-radius-bottomleft: $radius;
	-moz-border-radius-topleft: $radius;
	border-bottom-left-radius: $radius;
	border-top-left-radius: $radius;
}

@mixin radiusBottom($radius) {
	-webkit-border-bottom-left-radius: $radius;
	-webkit-border-bottom-right-radius: $radius;
	-moz-border-radius-bottomleft: $radius;
	-moz-border-radius-bottomright: $radius;
	border-bottom-left-radius: $radius;
	border-bottom-right-radius: $radius;
}

@mixin radiusTop($radius) {
	-webkit-border-top-left-radius: $radius;
	-webkit-border-top-right-radius: $radius;
	-moz-border-radius-topleft: $radius;
	-moz-border-radius-topright: $radius;
	border-top-left-radius: $radius;
	border-top-right-radius: $radius;
}

@mixin radiusTopRight($radius) {
	-webkit-border-top-right-radius: $radius;
	-moz-border-radius-topright: $radius;
	border-top-right-radius: $radius;
}

@mixin radiusTopLeft($radius) {
	-webkit-border-top-left-radius: $radius;
	-moz-border-radius-topleft: $radius;
	border-top-left-radius: $radius;
}

@mixin radiusBottomRight($radius) {
	-webkit-border-bottom-right-radius: $radius;
	-moz-border-radius-bottomright: $radius;
	border-bottom-right-radius: $radius;
}

@mixin gradient($start, $end) {
	background: $start;
	background: -webkit-gradient(linear, left top, left bottom, from($start), to($end));
	background: -webkit-linear-gradient(top, $start, $end 100%);
	background: -moz-linear-gradient(top,  $start,  $end);
	background: -o-linear-gradient(top, $start, $end 100%);
	background: linear-gradient(top, $start, $end 100%);
}

@mixin bshadow-out($left, $top, $radius, $color) {
	-webkit-box-shadow: $left $top $radius $color;
	-moz-box-shadow: $left $top $radius $color;
	box-shadow: $left $top $radius $color;
}

@mixin bshadow-in($left, $top, $radius, $color) {
	-webkit-box-shadow: inset $left $top $radius $color;
	-moz-box-shadow: inset $left $top $radius $color;
	box-shadow: inset $left $top $radius $color;
}

@mixin bshadow($leftO, $topO, $radiusO, $colorO, $leftI, $topI, $radiusI, $colorI) {
	-webkit-box-shadow: $leftO $topO $radiusO $colorO, inset $leftI $topI $radiusI $colorI;
	-moz-box-shadow: $leftO $topO $radiusO $colorO, inset $leftI $topI $radiusI $colorI;
	box-shadow: $leftO $topO $radiusO $colorO, inset $leftI $topI $radiusI $colorI;
}

@mixin noshadow {
	-webkit-box-shadow: none;
	-moz-box-shadow: none;
	box-shadow: none;
}



.field input,.field textarea {
  border: 1px solid #999;
  padding: 5px;
  @include radius(2px);
  @include bshadow-in(0, 0, 6px, rgba(40,40,40,0.3));
}

.field {
  display: table-row;
  label {
    display: table-cell;
    text-align: right;
    padding-right: 5px;
  }
  label.top {
    vertical-align: top;
  }
  input, textarea {
    border: 1px solid #999;
    padding: 5px;
    @include radius(2px);
    @include bshadow-in(0, 0, 6px, rgba(40,40,40,0.3));
    width: 97%;
  }
}

button, input[type=submit] {
  @include radius(0.2em);
  @include gradient(#f3f3f3, #ececec);
  display: inline-block;
  padding: 5px 10px 6px 10px;
  text-shadow: 1px 1px 1px rgba(255,255,255,1);
  border: 1px solid #999;
  cursor: pointer;
  min-width: 99%;
}
button:hover, input[type=submit]:hover {
  border: 1px solid $dark_red;
  color: white;
  @include gradient($light_red, $dark_red);
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.8);
}
button[disabled], button[disabled] {
  @include radius(0.2em);
  @include gradient(#f3f3f3, #ececec);
  display: inline-block;
  padding: 5px 10px 6px 10px;
  text-shadow: 1px 1px 1px rgba(255,255,255,1);
  border: 1px solid #D4D4D4;
  cursor: pointer;
}


h1, h2 ,h3 ,h4 ,h5 {
