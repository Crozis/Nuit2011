@import 'base';

html {
  background-color: #fff5fb;
  background-image: url(<%= asset_path 'gift2.png' %>);
  background-repeat: no-repeat;
  background-position: 0% 100%;
  height: 100%;
}

body {
  font-size: 1.1em;
  margin: 0;
  padding: 0;
  background-image: url(<%= asset_path 'rag.png' %>);
  background-repeat: repeat-x;
}

.content {
  margin: auto;
  width: 90%;
}

#logo_mobile {
  display: none;
}

