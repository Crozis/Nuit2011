@import 'base';

html {
  background-color: #fff5fb;
/*   background-image: url(<%= asset_path 'gift2.png' %>); */
  background-repeat: no-repeat;
  background-position: 0% 100%;
  height: 100%;
}

body {
  font-size: 1.1em;
  margin: 0;
  padding: 0;
  background-image: url(<%= asset_path 'rag.png' %>);
  background-repeat: repeat-x;
  margin-bottom: 250px;
}

.content {
  margin: auto;
  width: 72%;
}

#logo_mobile {
  display: none;
}

ul.events {
  width: auto;
  list-style: none;
  padding-left: 0;
  li {
    border: 2px solid #ac006a;
    padding: 1%;
    @include radius(0.3em); 
    p {
      margin: 0;
      margin-bottom: 0.3em;
    }

  }
}

p.alert, p.notice {
  border: 2px solid red;
  text-align: center;
  display: block;
  width: auto;
  @include radius(0.3em); 
  background-color: #ffe0f3;
  padding: 0.5em;
}

p.notice {
  background-color: #d1fcc3;
  border: 2px solid green;
}

.box_left, .box_right {
  display: table-cell;
  form {
    border: none;
    margin: 0;
    margin-right: auto !important;
    label {
      margin: 0;
      margin-right: auto !important;
    }
  }
  h2 {
    margin-top: 0;
  }
}

.box_left {
  width: 66%;
  border-right: 1px solid $dark_red;
}

.box_right {
  padding-left: 1%;
}

.box_left_right {
  display: table;
  margin: auto;
  width: 100%; 
}

table.list_product {
  border-collapse: collapse;
  border-spacing: 0;
  width: 100%;
  tr {
    border-bottom: 1px solid #CCC;
    border-collapse: collapse;
  }
  td {
    padding-right: 1%;
  }
  tr:nth-child(odd) {
    background-color: white;
  }
  .plus {
    color: transparent;
    background-image: url(<%= asset_path 'pro.png' %>);
    width: 25px;
    height: 25px;
    display: inline-block;
  }
  .moins {
    color: transparent;
    background-image: url(<%= asset_path 'cons.png' %>);
    width: 25px;
    height: 25px;
    display: inline-block;
  }
  td.img img{
    border-left: 1px solid #CCC;
    border-right:  1px solid #CCC;
    max-width: 10em;
    max-height: 10em;
  }
}

@media screen and (max-width: 1300px) {
  section form {
    padding: 2%;
  }
}

