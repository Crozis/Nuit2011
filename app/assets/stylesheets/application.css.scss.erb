@media screen and (max-width: 600px) {
  html {
    background-image: none;
    header {
      .top {
        margin: auto;
        h1#logo {
          font-size: 2em;
          display: none;
          line-height: 1.5em;
          display: block;
          font-size: 1.5em;
          margin-top: 0.5em;
          margin-bottom: 0;
        }
        img {
          display: none;
        }
      }
      nav {
        ul {
          display: table;
          li {
            @include radius(0.2em);
            @include gradient(#f3f3f3, #ececec);
            display: table-cell;
            font-size: 0.8em;
            vertical-align: middle;
            padding: 3px;
            text-shadow: 1px 1px 1px rgba(255,255,255,1);
            border: 1px solid #999;
            cursor: pointer;
            width: 30%;
            a {
              border: none;
            }
            a:hover {
              border: none;
            }
          }
        }
      }
    }
    .content section {
      display: block;
    }
    
    .field {
      input, textarea {
        width: 94%;
      }
    }
    
    .box_left, .box_right {
      display: block;
    }
    .box_right {
      margin-top: 2%;
    }
    
    .box_left_right {
      display: block;
      border-spacing: 0;
      margin: auto;
      width: 99%%; 
    }
  }
}

.no_border {
  form {
    border: none;
  }
}