@media screen and (max-width: 600px) {
  html {
    background-image: none;
    header {
      .top {
        margin: auto;
        h1#logo {
          font-size: 2em;
          display: none;
          line-height: 1.5em;
          display: block;
          font-size: 1.5em;
          margin-top: 0.5em;
          margin-bottom: 0;
        }
        img {
          display: none;
        }
      }
      nav {
        ul {
          display: table;
          li {
            @include radius(0.2em);
            @include gradient(#f3f3f3, #ececec);
            display: table-cell;
            padding: 5px 10px 6px 10px;
            text-shadow: 1px 1px 1px rgba(255,255,255,1);
            border: 1px solid #999;
            cursor: pointer;
            width: 45%;
            a {
              border: none;
            }
            a:hover {
              border: none;
            }
          }
        }
      }
    }
    .content section {
      display: block;
    }
  }
}