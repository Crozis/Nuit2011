@import 'base';

html {
  background-color: #fff5fb;
  background-image: url(<%= asset_path 'gift2.png' %>);
  background-repeat: no-repeat;
  background-position: 0% 100%;
  height: 100%;
}

body {
  font-size: 1.1em;
  margin: 0;
  padding: 0;
  background-image: url(<%= asset_path 'rag.png' %>);
  background-repeat: repeat-x;
}

.content {
  margin: auto;
  width: 90%;
}

#logo_mobile {
  display: none;
}

ul.events {
  width: auto;
  list-style: none;
  padding-left: 0;
  li {
    border: 2px solid #ac006a;
    padding: 1%;
    @include radius(0.3em); 
    p {
      margin: 0;
      margin-bottom: 0.3em;
    }

  }
}

p.alert, p.notice {
  border: 2px solid red;
  text-align: center;
  display: block;
  width: auto;
  @include radius(0.3em); 
  background-color: #ffe0f3;
  padding: 0.5em;
}

p.notice {
  background-color: #d1fcc3;
  border: 2px solid green;
}

.box_left, .box_right {
  display: table-cell;
  border: 3px solid $dark_red;
  @include radius(0.3em);
  padding: 2%;
  form {
    border: none;
  }
}

.box_left_right {
  display: table;
  border-spacing: 5px;
  margin: auto;
  width: 60%; 
}

@media screen and (max-width: 1300px) {
  section form {
    padding: 2%;
  }
}

